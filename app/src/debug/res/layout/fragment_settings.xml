<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_container">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/expertconnect_padding" />

            <include layout="@layout/expertconnect_include_maybe_card_shadow_top" />

            <LinearLayout
                android:id="@+id/push_notifications_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?expertconnect_colorBackgroundSecondary"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="?colorAccent"
                    android:paddingLeft="@dimen/expertconnect_padding"
                    android:paddingRight="@dimen/expertconnect_padding"
                    android:paddingTop="@dimen/expertconnect_padding_half"
                    android:paddingBottom="@dimen/expertconnect_padding_half"
                    android:text="@string/push_notifications" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/push_notifications_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:minHeight="48dp"
                    android:padding="@dimen/expertconnect_padding"
                    android:text="@string/receive_notifications"
                    app:holdr_onCheckedChanged="true" />
            </LinearLayout>

            <include layout="@layout/expertconnect_include_maybe_card_shadow_bottom" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/expertconnect_padding" />

            <include layout="@layout/expertconnect_include_maybe_card_shadow_top" />

            <LinearLayout
                android:id="@+id/version_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?expertconnect_colorBackgroundSecondary"
                android:orientation="vertical">

                <com.willowtreeapps.saguaro.android.widget.VersionTextView
                    android:id="@+id/version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:paddingTop="@dimen/expertconnect_padding_half"
                    android:paddingBottom="@dimen/expertconnect_padding_half"
                    android:paddingLeft="@dimen/expertconnect_padding"
                    android:paddingRight="@dimen/expertconnect_padding"
                    android:textColor="?colorAccent"
                    tools:text="Version 1.0.0.1" />

                <TextView
                    android:id="@+id/open_source_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackground"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:paddingLeft="@dimen/expertconnect_padding"
                    android:paddingRight="@dimen/expertconnect_padding"
                    android:paddingTop="@dimen/expertconnect_padding"
                    android:paddingBottom="@dimen/expertconnect_padding"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="@string/open_source_licenses"
                    app:holdr_onClick="true" />
            </LinearLayout>

            <include layout="@layout/expertconnect_include_maybe_card_shadow_bottom" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/expertconnect_padding" />

            <include layout="@layout/expertconnect_include_maybe_card_shadow_top" />

            <LinearLayout
                android:id="@+id/debug_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?expertconnect_colorBackgroundSecondary"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="?colorAccent"
                    android:paddingLeft="@dimen/expertconnect_padding"
                    android:paddingRight="@dimen/expertconnect_padding"
                    android:paddingTop="@dimen/expertconnect_padding_half"
                    android:paddingBottom="@dimen/expertconnect_padding_half"
                    android:text="@string/debug" />

                <TextView
                    android:id="@+id/debug_endpoint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackground"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:paddingLeft="@dimen/expertconnect_padding"
                    android:paddingRight="@dimen/expertconnect_padding"
                    android:paddingTop="@dimen/expertconnect_padding"
                    android:paddingBottom="@dimen/expertconnect_padding"
                    android:clickable="true"
                    android:focusable="true"
                    app:holdr_onClick="true" />

                <TextView
                    android:id="@+id/debug_chat_agent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackground"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:paddingLeft="@dimen/expertconnect_padding"
                    android:paddingRight="@dimen/expertconnect_padding"
                    android:paddingTop="@dimen/expertconnect_padding"
                    android:paddingBottom="@dimen/expertconnect_padding"
                    android:clickable="true"
                    android:focusable="true"
                    app:holdr_onClick="true" />
            </LinearLayout>

            <include layout="@layout/expertconnect_include_maybe_card_shadow_bottom" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/expertconnect_padding" />

        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/compat_shadow_action_top"
        layout="@layout/expertconnect_include_maybe_actions_shadow_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/expertconnect_compat_shadow_actions"
        android:layout_above="@+id/button_container"
        android:visibility="gone"
        app:holdr_ignore="view" />

    <FrameLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/expertconnect_padding"
        android:layout_alignParentBottom="true"
        android:background="?expertconnect_colorBackgroundSecondary"
        android:visibility="gone"
        tools:visibility="visible">

        <com.humanify.expertconnect.view.compat.MaterialButton
            android:id="@+id/log_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/log_out"
            app:holdr_onClick="true" />
    </FrameLayout>
</RelativeLayout>
