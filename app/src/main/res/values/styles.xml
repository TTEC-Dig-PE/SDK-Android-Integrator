<resources>
    <!-- Base Application Theme. -->

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>
        <item name="colorAccent">@color/blue</item>
        <item name="colorButtonNormal">@color/blue</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="android:buttonStyle">@style/AppStyle.Button</item>
        <item name="android:windowBackground">@color/light_gray</item>

        <item name="expertconnect_theme">@style/AppTheme.ExpertConnect</item>

        <!-- ExpertConnect Custom Attributes -->
        <item name="expertconnect_showChatAvatar">false</item>
        <item name="expertconnect_showChatPhotoUploadButton">false</item>
        <!-- ExpertConnect Custom Attributes -->

    </style>

    <style name="BaseAppTheme.ExpertConnect" parent="ExpertConnect.Theme.Light.DarkActionBar">
        <item name="android:buttonStyle">@style/AppStyle.Button</item>
        <item name="colorAccent">@color/blue</item>
        <item name="colorButtonNormal">@color/blue</item>
    </style>

    <!-- ExpertConnect Theme. -->
    <style name="AppTheme.ExpertConnect" parent="BaseAppTheme.ExpertConnect" />

    <!-- ExpertConnect Custom Styles -->
    <style name="ExpertConnect.TextAppearance.ChatAgent" parent="ExpertConnect.TextAppearance.BaseChatAgent" >
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ExpertConnect.ChatAgent" parent="ExpertConnect.BaseChatAgent" >
        <item name="android:background">@drawable/chat_agent_background</item>
        <item name="android:layout_marginRight">36dp</item>
    </style>

    <style name="ExpertConnect.TextAppearance.ChatClient" parent="ExpertConnect.TextAppearance.BaseChatClient" >
        <item name="android:textStyle">italic</item>
    </style>
    <style name="ExpertConnect.ChatClient" parent="ExpertConnect.BaseChatClient" >
        <item name="android:background">@drawable/chat_client_background</item>
        <item name="android:layout_marginLeft">36dp</item>
    </style>
    <!-- ExpertConnect Custom Styles -->

    <!---->

    <!-- Application Theme -->
    <style name="AppTheme" parent="BaseAppTheme" />

    <style name="AppTheme.BaseMain" parent="AppTheme">
        <!-- uses custom toolbar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Main" parent="AppTheme.BaseMain">
    </style>
    <!-- Application Theme -->

    <!-- Application Style -->
    <style name="AppStyle"/>

    <style name="AppStyle.ButtonBase" parent="android:Widget.Holo.Button">
    </style>

    <style name="AppStyle.LargeProgressBar" parent="android:Widget.Holo.ProgressBar.Large">
    </style>

    <style name="AppStyle.Button" parent="AppStyle.ButtonBase">
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <!-- Application Style -->

</resources>
